<!doctype html>
<html ng-app="darwin">
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Voyage of the HMS Beagle" %></title>
    <link href='http://fonts.googleapis.com/css?family=IM+Fell+English' rel='stylesheet' type='text/css'>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.js"></script>
    <script src="../javascripts/angapp.js"></script>
    <%= stylesheet_link_tag "normalize", "styles" %>

  </head>

  <body class="<%= page_classes %>" ng-controller="mainController">
    <div id="main">
      <%= yield %>
      <!-- angular templating -->
      <!-- this is where content will be injected -->
      <div ng-view></div>    
    </div>
    <!-- Scrolling Side Navigation -->
    <div id="main-slide-nav" class="slide-nav sliding-nav">
      <a href="#peru" data-index="0">Peru</a>
      <a href="#riodejaneiro" data-index="0">Rio de Janeiro</a>
      <a href="#santacruz" data-index="0">Santacruz</a>
      <a href="#straitofmagellan" data-index="0">Strait of Magellan</a>
      <a href="#tahitinewzealand" data-index="0">Tahiti &amp; New Zealand</a>
      <a href="#tierradelfuego" data-index="0">Tierra Del Fuego</a>
    </div>
    <%= javascript_include_tag  "jquery","tubular","main" %>
  </body>
</html>